/*
   Settings for HangMan
   
   Make changes only with UTF-8-capable editor like Notepad++
*/
{
	// display message on client-start:
	"game_greeting": true,
	//
	// display information on client-start if update is available:
	"notify_update": true,
	//
	// The way the manager selects a hangars to display, possible values:
	//     "normal"       the usual manner, displays previously selected hangar, 
	//     "random"       displays randomly selected hangar from available hangars on login and after battle
	//     "nation"       changes hangar depending on nation of selected vehicle (see section "nations" below)
	//     "last_battle"  take last known tank-position of last battle as hangar
	// (switching with buttons and/or keys still possible)
	// changeable ingame (lobby) by pressing keys for "change_mode" (see section "keys")
	"mode": "normal",
	//
	// change hangar in "random"-mode on each login (true) or only after battle (false):
	"changeOnLogin": true,
	//
	// show preview-thumbnails in hangar-selector-window, if available:
	"show_preview": true,
	//
	// sort hangarlist alphabetically by their alias (true) or paths (false):
	"sort_alphabetic": true,
	//
	// zoom-in/-out: use HangMan's greater Zoom-In/-Out (false) or standard (true)
	// takes only effect if hangar has no space.settings in res_mods-folder
	"use_standard_zoom": false,
	//
	// camouflage in hangar (may be overridden by 'hangar_def'- or 'arena_def'-file)
	// values: one of "winter", "summer", "desert", "random" or "none":
	"vehicleCamouflageKind": "default",
	//
	// switch Clan-Logo on/off:
	"ClanLogo": true,
	//
	// settings for keys (and -combinations)
	"keys":	{	  
	  // in battle: safe current map and position as hangar-file:
	  "safekey": "LALT NUMPAD7",
	  // switch forward in hangarlist:
	  "switchkey": "LALT NUMPAD6",
	  // switch backwards in hangarlist:
	  "backkey": "LALT NUMPAD4",
      // cycle through "mode"-values (normal, random, nation, last_battle): 
      "change_mode": "LALT NUMPAD5"	  
	},
	// define hangars for each nation in mode "nation": (set list of hangars in brackets [ ] , e.g. ["spaces/hangar_v2", "spaces/hangar_premium_v2"] )
	"nations":	{
	  "ussr":		"spaces/hangar_premium_v2",
	  "germany":	"spaces/hangar_premium_v2",
	  "usa":		"spaces/hangar_premium_v2",
	  "france":		"spaces/hangar_premium_v2",
	  "uk":			"spaces/hangar_premium_v2", 
	  "china":		"spaces/hangar_premium_v2",
	  "japan":		"spaces/hangar_premium_v2",
	  "czech":		"spaces/hangar_premium_v2"
	},
	//
	// if nation has multiple hangars, select one randomly (true): 
	"select_random_nationhangar": true,
	//
	// List of hangars not to be displayed by the manager in "normal"- and "random"-mode:
	"ignorelist": []
	// Example:
	// "ignorelist": ["spaces/hangar_premium_26apr", "spaces/hangar_premium_1may", "spaces/hangar_premium_12apr"]
	//
}
